  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run current file (Deno)",
      "type": "node",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": ["run", "--unstable-sloppy-imports"],
      "outputCapture": "std",
      "console": "integratedTerminal"
    }
  ]
}
